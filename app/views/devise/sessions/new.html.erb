<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 border rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-2 border rounded-md shadow-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
        <%= f.label :remember_me, class: "text-sm" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= f.submit "Log in", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
