<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-6">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 border rounded-md shadow-sm" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-2 border rounded-md shadow-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="space-y-2">
        <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
        <%= f.label :remember_me, class: "text-sm" %>
      </div>
    <% end %>
  <br/>
    <div class="mt-6">
      <%= f.submit "Log In", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>


</div>
